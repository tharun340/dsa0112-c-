#include <iostream>
using namespace std;

// Function with default argument
void displayStudent(string name,
                    string department,
                    string college = "ABC Engineering College") {
    cout << "Student Name : " << name << endl;
    cout << "Department   : " << department << endl;
    cout << "College      : " << college << endl;
}

int main() {
    cout << "Student Details (Using Default College):" << endl;
    displayStudent("Anjali", "Computer Science");

    cout << "\nStudent Details (Custom College):" << endl;
    displayStudent("Rahul", "Mechanical", "XYZ Institute of Technology");

    return 0;
}
