#include <iostream>
using namespace std;

// Function with default arguments
void displayStudent(string name = "Not Given",
                    int rollNo = 0,
                    float marks = 0.0) {
    cout << "Student Name : " << name << endl;
    cout << "Roll Number  : " << rollNo << endl;
    cout << "Marks        : " << marks << endl;
}

int main() {
    cout << "Student Details (Default Values):" << endl;
    displayStudent();

    cout << "\nStudent Details (Custom Values):" << endl;
    displayStudent("Rahul", 101, 89.5);

    return 0;
}
