#include <iostream>
using namespace std;
int max(int a, int b) {
    return (a > b) ? a : b;
}
float max(float a, float b) {
    return (a > b) ? a : b;
}
int max(int a, int b, int c) {
    int temp = (a > b) ? a : b;
    return (temp > c) ? temp : c;
}
int main() {
    cout << "Maximum of two integers: "
         << max(10, 20) << endl;
    cout << "Maximum of two floating-point numbers: "
         << max(12.5f, 9.8f) << endl;
    cout << "Maximum of three integers: "
         << max(5, 15, 10) << endl;
    return 0;
}
